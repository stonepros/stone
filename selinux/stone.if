########################################
## <summary>
##	All of the rules required to administrate
##	an stone environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`stone_admin',`
	gen_require(`
		type stone_t;
		type stone_initrc_exec_t;
		type stone_log_t;
		type stone_var_lib_t;
		type stone_var_run_t;
	')

	allow $1 stone_t:process { signal_perms };
	ps_process_pattern($1, stone_t)

    tunable_policy(`deny_ptrace',`',`
        allow $1 stone_t:process ptrace;
    ')

	stone_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 stone_initrc_exec_t system_r;
	allow $2 system_r;

	logging_search_logs($1)
	admin_pattern($1, stone_log_t)

	files_search_var_lib($1)
	admin_pattern($1, stone_var_lib_t)

	files_search_pids($1)
	admin_pattern($1, stone_var_run_t)
	optional_policy(`
		systemd_passwd_agent_exec($1)
		systemd_read_fifo_file_passwd_run($1)
	')
')
