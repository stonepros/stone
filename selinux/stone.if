##	Domain allowed access.
##	</summary>
## </param>
#
interface(`stone_initrc_domtrans',`
	gen_require(`
		type stone_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, stone_initrc_exec_t)
')
