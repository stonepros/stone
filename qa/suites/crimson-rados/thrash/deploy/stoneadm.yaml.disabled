# no need to verify os + flavor + sha1
verify_stone_hash: false
tasks:
- stoneadm:
    conf:
      mgr:
        debug ms: 1
        debug mgr: 20
        debug osd: 10
- stoneadm.shell:
    mon.a:
      - stone orch status
      - stone orch ps
      - stone orch ls
      - stone orch host ls
      - stone orch device ls
